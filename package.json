{
  "name": "@wishtack/checklist-cli",
  "version": "0.1.2",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "yarn start:angular-checklist",
    "start:angular-checklist": "concurrently \"ng serve\" \"yarn build-content:angular-checklist:watch\"",
    "build": "yarn clean && concurrently \"yarn build-app:prod\" \"yarn build-cli\"",
    "clean": "rm -f src/assets/config.json src/assets/content.json",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "cypress open",
    "build-app:prod": "ng build --prod",
    "build-cli": "tsc -p tools/tsconfig.json",
    "build-content:angular-checklist": "ts-node ./tools/checklist-cli.ts examples/angular-checklist",
    "build-content:angular-checklist:watch": "nodemon --config nodemon.angular-checklist.json",
    "ci": "yarn build-app:prod && yarn build-cli",
    "format:base": "prettier \"{src,tools,cypress}/**/*{.ts,.js,.json,.html}\"",
    "format:check": "npm run format:base -- --list-different",
    "format:fix": "npm run format:base -- --write"
  },
  "bin": {
    "checklist": "./dist/tools/checklist-cli.js"
  },
  "files": [
    "dist/**"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tools}/**/*{.ts,.js,.json,.html}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "gray-matter": "^4.0.1",
    "markdown-it": "^8.4.1",
    "ncp": "^2.0.0"
  },
  "devDependencies": {
    "@angular/animations": "^7.1.0",
    "@angular/cdk": "^7.1.0",
    "@angular/common": "^7.1.0",
    "@angular/compiler": "^7.1.0",
    "@angular/core": "^7.1.0",
    "@angular/forms": "^7.1.0",
    "@angular/http": "^7.1.0",
    "@angular/material": "^7.1.0",
    "@angular/platform-browser": "^7.1.0",
    "@angular/platform-browser-dynamic": "^7.1.0",
    "@angular/platform-server": "^7.1.0",
    "@angular/router": "^7.1.0",
    "@fortawesome/angular-fontawesome": "^0.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.6",
    "@fortawesome/free-brands-svg-icons": "^5.4.1",
    "@fortawesome/free-solid-svg-icons": "^5.4.1",
    "@ngrx/effects": "^6.1.2",
    "@ngrx/router-store": "^6.1.2",
    "@ngrx/store": "^6.1.2",
    "@ngrx/store-devtools": "^6.1.2",
    "@types/node": "^10.1.2",
    "core-js": "^2.5.4",
    "fuzzysort": "^1.1.4",
    "hammerjs": "^2.0.8",
    "highlight.js": "^9.13.1",
    "lodash.groupby": "^4.6.0",
    "ngrx-store-localstorage": "^5.1.0",
    "normalize.css": "^8.0.0",
    "rxjs": "^6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "^0.8.26",
    "@angular-devkit/build-angular": "~0.11.0",
    "@angular/cli": "~7.1.0",
    "@angular/compiler-cli": "^7.1.0",
    "@angular/language-service": "^7.1.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@cypress/webpack-preprocessor": "^4.0.2",
    "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
    "@types/highlight.js": "^9.12.2",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/markdown-it": "^0.0.4",
    "codelyzer": "^4.5.0",
    "concurrently": "^4.1.0",
    "cypress": "^3.1.3",
    "http-server": "^0.11.1",
    "husky": "^1.2.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^8.1.0",
    "ngrx-store-freeze": "^0.2.4",
    "node-sass": "^4.13.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.2",
    "shorthash": "^0.0.2",
    "ts-loader": "^5.3.1",
    "ts-node": "^6.0.3",
    "tslint": "^5.11.0",
    "typescript": "~3.1.6"
  }
}
